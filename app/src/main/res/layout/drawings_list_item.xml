<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    app:cardBackgroundColor="@color/lightPurple"
    android:padding="5dp"
    android:layout_margin="8dp"
    app:cardCornerRadius="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/drawing_list_item_iv"
            android:layout_width="95dp"
            android:layout_height="95dp"
            android:layout_margin="6dp"
            android:scaleType="centerCrop"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/drawing_list_item_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Title"
                android:textSize="19sp"
                android:fontFamily="sans-serif-light"
                android:textColor="@android:color/black"
                android:layout_marginTop="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:textStyle="bold"/>

            <com.github.curioustechizen.ago.RelativeTimeTextView
                android:id="@+id/drawing_list_item_time_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Date"
                android:textSize="17sp"
                android:fontFamily="sans-serif-light"
                android:textColor="@android:color/black"
                android:layout_marginTop="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"/>

            <TextView
                android:id="@+id/drawing_list_item_markers_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="5 markers"
                android:textSize="17sp"
                android:fontFamily="sans-serif-light"
                android:textColor="@android:color/black"
                android:layout_marginTop="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"/>

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>