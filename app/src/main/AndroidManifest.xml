<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.ishanvohra.discussondrawingsapp">

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_sketch"
        android:label="@string/app_name"
        android:roundIcon="@drawable/ic_sketch"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.Light.NoActionBar">
        <activity android:name=".activities.AddDrawingActivity"></activity>
        <activity android:name=".activities.DrawingActivity" />
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>